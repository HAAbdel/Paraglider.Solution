
@{
    ViewData["Title"] = "Index";
}
@model IEnumerable<Paraglider.sl.DTOs.ParagliderModelDTO>

<form method="Post">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" name="name" value="" />
            <div class="input-group-append">
                <button class="btn btn-secondary">
                    <i class="fas fa-search"></i>
                </button>
            </div>

        </div>
    </div>
</form>
<div  class="container justify-content-center">
    <div id="formulaireedit">
        <div class="table-responsive-lg">
            <table class="table table-borderless table-hover table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th>id </th>
                        <th>Paraglider model name</th>
                        <th>Paraglider model type</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ParagliderModel in Model)
                    {
                        <tr style="cursor: pointer;" onclick="location.href = '@(Url.Action("Details", "ParagliderModel", new { id = ParagliderModel.Id }))'">
                            <th>@ParagliderModel.Id </th>
                            <th>@ParagliderModel.ModelName</th>
                            <th>@ParagliderModel.ModelType</th>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

