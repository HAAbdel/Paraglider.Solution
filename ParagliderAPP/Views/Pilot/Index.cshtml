
@model IQueryable<Paraglider.sl.DTOs.PilotDto>

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>

    <form method="Post">
        <div class="form-group">
            <div class="input-group">
                <input type="search" class="form-control" name="name" value="" />
                <div class="input-group-append">
                    <button class="btn btn-secondary">
                        <i class="fas fa-search"></i>
                    </button>
                </div>

            </div>
        </div>
    </form>
    <p> clicker sur le pilot pour plus de details</p>
    <div class="table-responsive-lg">
        <table class="table table-borderless table-secondary table-hover table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>id </th>
                    <th>first</th>
                    <th>last</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pilot in Model)
                {
                    <tr style="cursor: pointer;" onclick="location.href = '@(Url.Action("Details", "Pilot", new { id = pilot.Id }))'">
                        <th>@pilot.Id </th>
                        <th>@pilot.FirstName</th>
                        <th>@pilot.LastName</th>
                        <td>@Html.ActionLink("Edit", "Edit", new { id = pilot.Id })</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div>
        <button type="button" class="btn btn-outline-primary" onclick="location.href = '@Url.Action("Creation","Pilot")'">Create a pilot</button>
    </div>
</body>
</html> 