
@model IQueryable<Paraglider.sl.DTOs.PilotDto>

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>

    <form method="Post">
        <div class="form-group">
            <div class="input-group">
                <input type="search" class="form-control" name="name" value="" />
                <div class="input-group-append">
                    <button class="btn btn-secondary">
                        <i class="fas fa-search"></i>
                    </button>
                </div>

            </div>
        </div>
    </form>
    @foreach (var pilot in Model)
    {
        <table style="font-family:Arial;margin:5px ;border: 1px solid black;width: 450px">
            <thead>
                <tr>
                    <th>id </th>
                    <th>first</th>
                    <th>last</th>
                </tr>
            </thead>
            <tbody>

                

                <tr>
                    <th>@pilot.Id </th>
                    <th>@pilot.FirstName</th>
                    <th>@pilot.LastName</th>
                    <th>@Html.ActionLink("Edit", "Edit", new { id = pilot.Id })</th>
                    <th>@Html.ActionLink("Details", "Details", new { id = pilot.Id })</th>
                </tr>
                
            </tbody>
        </table>
    }
</body>
</html> 